<div class="grid grid-cols-12 w-full">
  <%= render('shared/outline') %>
  <div class="col-span-12 md:col-span-10 inline-block">
    <% @sections.each do |section| %>
    <section class="my-5" id="<%= dom_id section %>">
      <h3 class="font-semibold text-xl mt-2 mb-3">
        <a href="#<%= dom_id section %>">
          <%= section.title %>
        </a>
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
        
        <% section.items.order('position ASC').each do |item| %>
          <div class="h-26 flex flex-col items-start rounded p-3 border shadow-sm hover:scale-[1.01] transform overflow-hidden transition">
            <%= link_to item.link_name.truncate(30), item.link_href, title: item.link_name,
                        class: 'text-gray-800 mb-2 font-medium', target: '_blank' %>
            <% desc = item.description.blank? ? item.link_name : item.description %>
            <p class="text-gray-400 font-medium text-sm" title="<%= desc %>">
              <%= desc.truncate(40)%>
            </p>
          </div>
        <% end %>
        
      </div>
    </section>
    <% end %>
  </div>

</div>