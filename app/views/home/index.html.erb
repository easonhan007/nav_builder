<div>
  <% @sections.each do |section| %>
  <section class="my-5 bg-gray-50 border rounded">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
      
      <% section.items.order('position ASC').each do |item| %>
        <div class="h-32 flex flex-col items-start">
          <%= link_to item.link_name, item.link_href %>
          <p class="text-gray-500 font-medium text-sm">
            <%= item.description %>
          </p>
        </div>
      <% end %>
      
    </div>
  </section>
  <% end %>
</div>
