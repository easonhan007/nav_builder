<div>
  <% @sections.each do |section| %>
  <section class="my-5" id="<%= section.title.parameterize %>">
    <h3 class="font-semibold text-xl mt-2 mb-3">
      <a href="#<%= section.title.parameterize%>">
        <%= section.title %>
      </a>
    </h3>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
      
      <% section.items.order('position ASC').each do |item| %>
        <div class="h-24 flex flex-col items-start rounded p-3 border shadow-sm">
          <%= link_to item.link_name.truncate(30), item.link_href, title: item.link_name,
                      class: 'text-gray-800 mb-1 font-medium', target: '_blank' %>
          <p class="text-gray-500 font-medium text-sm" title="<%= item.description %>">
            <%= item.description.truncate(40) %>
          </p>
        </div>
      <% end %>
      
    </div>
  </section>
  <% end %>
</div>
