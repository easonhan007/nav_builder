<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @section %>

    <%= link_to 'New Item', new_item_path(section_id:@section.id), 
        class: "text-white rounded py-3 ml-2 px-3 bg-blue-600 inline-block font-medium text-sm" %>
    <%= link_to 'Bulk New Items', new_batch_item_record_path(section_id:@section.id), 
        class: "text-white rounded py-3 ml-2 px-3 bg-green-600 inline-block font-medium text-sm" %>
    <%= link_to 'Edit', edit_section_path(@section), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', section_path(@section), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium text-white" %>
    </div>
    <%== back_link("ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium") %>
  </div>
</div>
