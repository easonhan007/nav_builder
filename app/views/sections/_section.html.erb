<div id="<%= dom_id section %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= section.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= section.position %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Page:</strong>
    <%= section.page.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this section", section, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this section', edit_section_path(section), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
