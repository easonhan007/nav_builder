<div class="flex w-full flex-col my-5">
  <h3 class="text-lg text-gray-800 my-2"><%= section.title%>
    <small class="text-sm text-blue-500 mb-2 hover:underline"><%= link_to section.page.title, section.page %></small>
  </h3>
  <p class="mb-2 text-sm">Position: <%= section.position %></p>
  <p class="mb-2 text-sm">Items: 
    <%= link_to section.items.count, items_path(section_id: section.id), class:'text-blue-500 hover:underline' %>
  </p>
  <div class="flex flex-row items-center">
    <% if action_name != "show" %>
      <%= link_to "Show", section, class: "rounded py-3 px-3 bg-gray-100 inline-block font-medium text-sm" %>
      <%= link_to 'Edit', edit_section_path(section), class: "rounded py-3 ml-2 px-3 bg-gray-100 inline-block font-medium text-sm" %>
      <%= link_to 'New Item', new_item_path(section_id:section.id), class: "text-white rounded py-3 ml-2 px-3 bg-blue-600 inline-block font-medium text-sm" %>
      <%= link_to 'Bulk New Items', new_batch_item_record_path(section_id:section.id), class: "text-white rounded py-3 ml-2 px-3 bg-green-600 inline-block font-medium text-sm" %>
    <% end %>
  </div>
</div>