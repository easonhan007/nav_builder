<%= form_with(model: batch_item_record, class: "contents") do |form| %>
  <% if batch_item_record.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(batch_item_record.errors.count, "error") %> prohibited this batch_item_record from being saved:</h2>

      <ul>
        <% batch_item_record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :section %>
    <%= form.collection_select :section_id, Section.order('created_at DESC'), :id, :with_page, {}, class: 'rounded-md block shadow border border-gray-200 outline-none px-3 py-2 mt-2 w-full'%>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 8, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"%>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
