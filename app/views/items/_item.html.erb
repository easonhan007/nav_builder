<div class="flex w-full flex-col my-5">
  <h3 class="text-lg my-2"><%= link_to item.link_name, item.link_href, target: '_blank', class: 'hover:underline' %>
    <small class="text-sm text-blue-500 mb-2 hover:underline"><%= link_to item.section.title, item.section %></small>
  </h3>
  <p class="mb-2 text-sm">Position: <%= item.position %></p>
  <div class="flex flex-row items-center">
    <% if action_name != "show" %>
      <%= link_to "Show", item, class: "rounded py-3 px-3 bg-gray-100 inline-block font-medium text-sm" %>
      <%= link_to 'Edit', edit_item_path(item), class: "rounded py-3 ml-2 px-3 bg-gray-100 inline-block font-medium text-sm" %>
    <% end %>
  </div>
</div>